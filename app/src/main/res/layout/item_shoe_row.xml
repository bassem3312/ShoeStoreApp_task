<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:layout_margin="@dimen/large_margin"
        android:padding="@dimen/large_margin">
    
        <ImageView
            android:id="@+id/shoe_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_sports" />
    
        <TextView
            android:id="@+id/shoe_name_textView"
            style="@style/bold_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shoe_image" />
    
        <TextView
            android:id="@+id/size_text"
            style="@style/bold_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:drawableStart="@drawable/ic_shoe_size_scaled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/company_name_text"
            app:layout_constraintTop_toBottomOf="@+id/shoe_name_textView" />
    
        <TextView
            android:id="@+id/company_name_text"
            style="@style/bold_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/size_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shoe_name_textView"
            app:layout_goneMarginStart="@dimen/large_margin" />
    
        <TextView
            android:id="@+id/description_text"
            style="@style/text_details_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/shoe_name_textView"
            app:layout_constraintStart_toStartOf="@+id/shoe_name_textView"
            app:layout_constraintTop_toBottomOf="@+id/company_name_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>