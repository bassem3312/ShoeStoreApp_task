<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="bold_title_text" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
    </style>
    <style name="edit_text_style">
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
    </style>
    
    <style name="text_details_style">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>
</resources>